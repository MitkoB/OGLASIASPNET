@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a class=" dropdown-toggle text-white" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-user"></i> @User.Identity.GetUserName()<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li class="dropdown-header">
                        <a href="javascript:document.getElementById('logoutForm').submit()" style="color:orangered" class="font-weight-bold pt-2 text-center">Одјави се</a>
                    </li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="/Account/Register" class="font-weight-bold small pt-1" id="registerLink" style="color:white">Регистрирај се</a>
        </li>
        <li style="margin-left:10px">
            <span style="color:orangered">| &nbsp;</span>
            <a href="/Account/Login" class="small font-weight-bold pt-1" id="loginLink" style="color:white">Најави се</a>
        </li>
    </ul>
}
