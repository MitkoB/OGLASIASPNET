@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - oglasiMK</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

</head>
<body>

    <nav class="navbar navbar-fixed-top navbar-expand navbar-dark pt-0 pb-0 " style="background-color:#00264d;">

        <a href="/Home/Index" class="ml-2"><img src="@Url.Content("~/Content/images/logo.png")" style="height: 70px; width: 180px;"></a>
        <ul class="navbar-nav font-weight-bold ml-auto">
            <li class="nav-item mr-1">
                <a href="/Home/Index" class="nav-link">Дома</a>
            </li>
            <li class="nav-item mr-1" >
                @{Html.RenderAction("Menu", "Categories");}
            </li>
            <li class="nav-item mr-1">
                <a href="/Oglas/Create" class="nav-link">Креирај оглас</a>
            </li>
            <li class="nav-item mr-1">
                <a href="/Home/About" class="nav-link">За нас</a>
            </li>
            <li class="nav-item mr-1">
                <a href="/Account/ViewFavorite" class="nav-link">Кошничка</a>
            </li>
            <li class="nav-item" id="partialCssLogin" >
                @Html.Partial("_LoginPartial")
            </li>
        </ul>

    </nav>


    <div class="" style="min-height:100%">
        @RenderBody()
    </div>



    <footer class="mb-0 text-white pt-0 pb-0" style="background-color:#00264d; position:relative; z-index:1; margin-top:15em; bottom: 0; width:100%; ">
        <div class="row no-gutters pb-2 justify-content-between d-flex">
            <div class="col-4 pl-3">
                <img src="@Url.Content("~/Content/images/logo.png")" style="height: 70px; width: 180px; border-bottom: 1px solid orangered"><br>
                <address class="small pt-2 font-weight-light">
                    ул. Качанички пат бр.31<br />
                    1000 Скопје, Македонија<br />
                    Поштенски фах 2509<br />
                    +389 (0)2 61 85 494<br />
                    kontakt@oglasi.mk
                </address>
            </div>
            <div class="col-3 text-center">
                <div class="mt-5 text-center">
                    
                    <a href="https://www.facebook.com/" class="text-white"><i class="fa fa-facebook-f fa-2x pr-2 pt-3"></i></a>
                    <a href="https://www.twitter.com/" class="text-white"><i class="fa fa-twitter fa-2x pr-2 pt-3"></i></a>
                    <a href="https://www.google.com/" class="text-white"><i class="fa fa-google fa-2x pt-3"></i></a>
                    <br /><br />
                    <small>Copyright &copy; OglasiMK</small>
                </div>
            </div>

            <div class="col-4 text-right pr-3">
                <h4 class="text-white font-weight-light pt-3 pb-2">
                    <a href="/Home/Index" class="text-white pt-2">ДОМА</a><br />
                    <a href="/Oglas/Index" class="text-white mt-2">ОГЛАСИ</a> <br />
                    <a href="/Home/About" class="text-white mt-2">ЗА НАС</a> <br />
                    <a href="/Home/Contact" class="text-white mt-2">КОНТАКТ</a>
                </h4>
            </div>

        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
