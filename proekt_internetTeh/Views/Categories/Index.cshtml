@model IEnumerable<proekt_internetTeh.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Листа категории</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.desc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.ime,"PoKategorija","Categories",new { id=item.Id},null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.desc)
            </td>
            <td>
                @if (User.IsInRole("Administrator"))
                {@Html.ActionLink("Промени", "Edit", new { id = item.Id })} |
                @Html.ActionLink("Прочитај повеќе", "Details", new { id = item.Id }) |
                @if (User.IsInRole("Administrator"))
                { @Html.ActionLink("Избриши", "Delete", new { id = item.Id })}
            </td>
        </tr>
    }

</table>
