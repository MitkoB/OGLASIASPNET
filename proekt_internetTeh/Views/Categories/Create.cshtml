@model proekt_internetTeh.Models.Category

@{
    ViewBag.Title = "Креирај категорија";
}

<div class="container mt-5 mb-5 ">
    <div class="bgContainer text-white mr-5 ml-5 pt-3 pb-5 pr-5 pl-5" style="background: rgba(0,38,77,1); box-shadow: 10px 10px 30px grey">
        <h3 class="text-center display-4" style="color:#e86f00">Креирај категорија</h3>
        <hr style="background: linear-gradient(.25turn,#01255c, #e86f00, #01255c);border:0; height:3px;" />
        <div class="w3-container w3-animate-zoom">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <p class="text-center">Ве молиме внесете име и опис за категоријата</p>
                    <div class="row justify-content-center">
                        <div class="col-4">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        @Html.LabelFor(model => model.ime, htmlAttributes: new { @class = "control-label col-4" })
                    </div>
                    <div class="mt-1 row justify-content-center">
                        <div class="col-4">
                            @Html.EditorFor(model => model.ime, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ime, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="mt-2 row justify-content-center">
                        @Html.LabelFor(model => model.desc, htmlAttributes: new { @class = "control-label col-4" })
                    </div>
                    <div class=" mt-1 row justify-content-center">
                        <div class="col-4">
                            @Html.EditorFor(model => model.desc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.desc, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row justify-content-center mt-3">
                        <div class="col-4 text-center">
                            <input type="submit" value="Зачувај" class="btn text-white" style="background-color:#e86f00" />
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
