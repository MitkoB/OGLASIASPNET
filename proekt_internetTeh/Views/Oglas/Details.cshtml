@model proekt_internetTeh.Models.Oglas
@{
    ViewBag.Title = "Детали";
}


<div class="container mt-5 mb-5 ">
    <div class="bgContainer text-white mr-5 ml-5 pt-3 pb-5 pr-5 pl-5" style="background: rgba(0,38,77,1); box-shadow: 10px 10px 30px grey">
        <h3 class="text-center display-4" style="color:#e86f00">Детали за огласот</h3>
        <hr style="background: linear-gradient(.25turn,#01255c, #e86f00, #01255c);border:0; height:3px;" />
        <div class="w3-container w3-animate-zoom">

            <!--------------------- СЛИКИ------------------------------>
            <div class="row">
                <div class="col-12 text-center">
                    <!------ Тука провери ако има и втора слика внесено стави га до првата у иста колона ваљда добро ќее ----->
                    <img src="@Model.slikaUrl" style="width:400px; height:300px;" />
                    @if (Model.urlSlika2 != null)
                    {
                        <img src="@Model.urlSlika2" style="width:400px; height:300px;" />
                    }
                    
                </div>
            </div>

            <!--------------------- ИНФОРМАЦИИ ------------------------------>
            <div class="row mt-3 justify-content-center">
                <div class="col-6 text-right border-right pr-2">
                    <dl>
                        <dt style="color:#e86f00">@Html.DisplayNameFor(model => model.zanimanje)</dt>
                        <dd>@Html.DisplayFor(model => model.zanimanje)</dd>
                        <dt class="mt-1" style="color:#e86f00">@Html.DisplayNameFor(model => model.kategorija)</dt>
                        <dd>@Html.DisplayFor(model => model.kategorija.ime)</dd>
                        <dt class="mt-1" style="color:#e86f00">@Html.DisplayNameFor(model => model.pocetnaData)</dt>
                        <dd>@Html.DisplayFor(model => model.pocetnaData)</dd>
                        <dt class="mt-1" style="color:#e86f00">@Html.DisplayNameFor(model => model.krajnaData)</dt>
                        <dd>@Html.DisplayFor(model => model.krajnaData)</dd>
                        <dt class="mt-1" style="color:#e86f00">@Html.DisplayNameFor(model => model.opis)</dt>
                        <dd>@Html.DisplayFor(model => model.opis)</dd>
                    </dl>
                </div>
                <div class="col-6 text-left border-left pl-2">
                    <dl>
                        <dt style="color:#e86f00">@Html.DisplayNameFor(model => model.pravnoLice)</dt>
                        <dd>@Html.DisplayFor(model => model.pravnoLice)</dd>
                        <dt class="mt-1" style="color:#e86f00">@Html.DisplayNameFor(model => model.opstina)</dt>
                        <dd>@Html.DisplayFor(model => model.opstina)</dd>
                        <dt class="mt-1" style="color:#e86f00">@Html.DisplayNameFor(model => model.adresa)</dt>
                        <dd>@Html.DisplayFor(model => model.adresa)</dd>
                        <dt class="mt-1" style="color:#e86f00">@Html.DisplayNameFor(model => model.email)</dt>
                        <dd>@Html.DisplayFor(model => model.email)</dd>
                        <dt class="mt-1" style="color:#e86f00">@Html.DisplayNameFor(model => model.telBroj)</dt>
                        <dd>@Html.DisplayFor(model => model.telBroj)</dd>
                    </dl>
                </div>
            </div>
            <!--------------------- КОПЧИЊА------------------------------>
            <div class="row mt-3">
                <div class="col-12 text-center">
                    <a href="/Oglas/Index" class="btn btn-link btn-lg text-white" style="background-color:#e86f00"> &lang; Сите огласи</a>
                    @if (User.Identity.Name.Equals(Model.email) || User.IsInRole("Editor"))
                    {
                        <a href="/Oglas/Edit/@Model.Id" class="btn btn-link btn-lg text-white ml-2" style="background-color:#e86f00">Измени оглас</a>
                        <a href="/Oglas/Delete/@Model.Id" class="btn btn-link btn-lg text-white ml-2 btn-danger" >Избриши оглас <i class="fa fa-trash text-white"></i></a>
                    }
                </div>

            </div>
            <div class="mt-5">
                @{
                    Html.RenderAction("Pregled", "Komentars", new { id = Model.Id });
                    if (Request.IsAuthenticated)
                    {
                        Html.RenderAction("PartialKreiraj", "Komentars", new { id = Model.Id });
                    }
                }
            </div>
        </div>
    </div>
</div>

    
