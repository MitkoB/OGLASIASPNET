@model IEnumerable<proekt_internetTeh.Models.Komentar>

@{
    ViewBag.Title = "Index";
}
<head>
    @Scripts.Render("~/Scripts/jquery-3.4.1.min.js")

    <script src="@Url.Content("~/Scripts/jquery-3.4.1.min.js")" type="text/javascript"></script>
    @Scripts.Render("~/Scripts/bootbox.min.js")
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script> 
</head>
<body>
    <h2>Коментари</h2>

    <table class="table" id="table6">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.komentar)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.komentar)
                    </td>
                    <td>
                        @if (User.Identity.Name.Equals(item.Email))
                        {@Html.ActionLink("Измени", "Edit", "Komentars", new { id = item.Id }, null)}|
                        @if (User.Identity.Name.Equals(item.Email))
                        {
                        @Ajax.ActionLink("Brisi", "Delete", "Komentars", new { id = item.Id },new AjaxOptions{
                       HttpMethod = "Get",
                       Confirm = "Дали сте сигурни дека сакате да го избришете вашиот коментар?",
                       OnSuccess="RemoveRow"},
                        new { @class = "btn btn-danger glyphicon glyphicon-trash" })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
<script type="text/javascript">
    function RemoveRow() {
        var $tr = $(this).closest('tr');
        $tr.remove();
    }
</script>