@model proekt_internetTeh.Models.AddToRoleModel


@{
    ViewBag.Title = "Додели улога";
}

<div class="container mt-5 mb-5 ">
    <div class="bgContainer text-white mr-5 ml-5 pt-3 pb-5 pr-5 pl-5" style="background: rgba(0,38,77,1); box-shadow: 10px 10px 30px grey">
        <h4 class="text-center display-4" style="color:#e86f00">Додели улоги</h4>
        <hr style="background: linear-gradient(.25turn,#01255c, #e86f00, #01255c);border:0; height:3px;" />
        <div class="w3-container w3-animate-zoom">


            @using (Html.BeginForm("addUserToRole", "Account"))
            {
                <div class="row justify-content-center mt-1">
                    <div class="col-4">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row justify-content-center mt-1">
                    <div class="col-4">
                        @Html.DropDownListFor(m => m.Role, new SelectList(Model.roles), new { @class = "form-control" })
                    </div>
                </div>
                <div class="row justify-content-center mt-2">
                    <div class="col-4">
                        <button type="submit" class="btn btn-lg text-white" style="background-color:#e86f00">Додади</button>
                    </div>
                </div>
            }


        </div>
    </div>
</div>




